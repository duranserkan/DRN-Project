@page
@model Sample.Hosted.Pages.User.Management.ShowRecoveryCodes

@{
    ViewData["Title"] = "Recovery Codes";
    ViewData["CenterVertically"] = true;
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <div class="card">
            <div class="card-body">
                <p>Save these recovery codes in a safe place:</p>

                <ul>
                    @foreach (var recoveryCode in Model?.RecoveryCodes??[])
                    {
                        <li>@recoveryCode</li>
                    }
                </ul>

                <div class="col-auto mt-3">
                    <a href="@PageFor.User.Profile" class="btn btn-secondary">Back to Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}