@page
@model Sample.Hosted.Pages.User.LoginModel

@{
    var title = "Log in";
    var options = Get.LayoutOptions.Centered(title);
    ViewData[Get.ViewDataKeys.Title] = title;
    ViewData[Get.ViewDataKeys.MainContentLayoutOptions] = options;
}

<form method="post" class="text-start">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Input.ReturnUrl" type="hidden" value="@(Model.ReturnUrl ?? string.Empty)"/>
    
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" type="email" placeholder="name@example.com" autocomplete="email"/>
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password webauthn"/>
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3 form-check text-start">
        <input asp-for="Input.RememberMe" class="form-check-input"/>
        <label asp-for="Input.RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary w-100">Log in</button>
</form>

<p class="mt-3">
    <a asp-page="@Get.Page.User.Register">Register as a new user</a>
</p>