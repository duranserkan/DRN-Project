@using DRN.Framework.SharedKernel.Enums
<nav class="navbar navbar-expand-lg container bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="@PageFor.Root.Home">@ScopeContext.Settings.ApplicationName</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" active-page="@PageFor.Root.Home" href="@PageFor.Root.Home">Home</a>
                </li>
                <environment include="@AppEnvironment.Development.ToString()">
                    <li class="nav-item">
                        <a class="nav-link" authorized-only aria-current="page" href="@PageFor.Root.Swagger" target="_blank">Swagger</a>
                    </li>
                </environment>
                <!-- Add more links here if needed -->
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (ScopeContext.Authenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @ScopeContext.User.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end bg-primary dropdown-menu-dark border-0" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" href="@PageFor.User.Profile">My Profile</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" href="@PageFor.User.Logout">Log out</a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@PageFor.User.Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@PageFor.User.Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>