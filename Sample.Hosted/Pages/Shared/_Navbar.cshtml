@using DRN.Framework.SharedKernel.Enums

<header class="navbar navbar-expand-md container-xxl bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center link-body-emphasis text-decoration-none" asp-page="@Get.Page.Root.HomeAnonymous" mark-when-active="false">
            <i class="bi bi-bootstrap-reboot me-2" style="font-size: 1.5rem; "></i>@ScopeContext.Settings.ApplicationName
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav" authorized-only>
                <li class="nav-item">
                    <a class="nav-link" asp-page="@Get.Page.Root.Home" authorized-only>Home</a>
                </li>
                <environment include="@nameof(AppEnvironment.Development)">
                    <li class="nav-item">
                        <a class="nav-link" authorized-only href="@Get.Page.Root.Swagger" target="_blank">Swagger</a>
                    </li>
                    <div class="btn-group nav-item" authorized-only>
                        <button class="nav-link dropdown-toggle" id="navbarTestPages" data-bs-toggle="dropdown" aria-expanded="false">
                            Test Pages
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" data-bs-theme="light" aria-labelledby="navbarTestPages">
                            <li>
                                <a class="dropdown-item" authorized-only href="@Get.Page.Test.DeveloperView" target="_blank">Developer View</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" authorized-only asp-page="@Get.Page.Test.Htmx">Htmx</a>
                            </li>
                        </ul>
                    </div>
                </environment>
                <!-- Add more links here if needed -->
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (ScopeContext.Authenticated)
                {
                    <li class="nav-item dropdown">
                        <button class="nav-link dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            @ScopeContext.User.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" data-bs-theme="light" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-page="@Get.Page.UserProfile.Details">My Profile</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-page="@Get.Page.User.Logout">Log out</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <profile-picture class="rounded-circle" width="40" height="40"/>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="@Get.Page.User.Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="@Get.Page.User.Register">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</header>