@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <div id="cookieConsent" class="alert alert-info alert-dismissible fade show mb-0 p-0 fixed-bottom" role="alert">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Cookie Policy Message -->
            <div class="me-3">
                <span>
                    We use cookies to enhance your experience. <a asp-page="/Privacy">Learn more</a>.
                </span>
            </div>

            <!-- Accept Button -->
            <button type="button" class="btn btn-info btn-sm accept-policy" data-bs-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
                Accept
            </button>
        </div>
    </div>
    <script>
        (function () {
            let button = document.querySelector("#cookieConsent button[data-cookie-string]");
            button.addEventListener("click", function (event) {
                document.cookie = button.dataset.cookieString;
            }, false);
        })();
    </script>
}