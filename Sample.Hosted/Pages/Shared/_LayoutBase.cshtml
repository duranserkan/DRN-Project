@using DRN.Framework.Hosting.Utils
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
@*
https://getbootstrap.com/docs/5.3/customize/color-modes/
https://getbootstrap.com/docs/5.3/examples/
https://getbootstrap.com/docs/5.3/examples/sidebars/
*@

@{
        var canonicalUrl = Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
        var nonce = Context.GetNonce();
}
<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="DRN App">
        <meta name="author" content="Duran Serkan KILIÃ‡">
        <meta name="htmx-config" content='{
                "selfRequestsOnly":true,"allowEval":false,
                "refreshOnHistoryMiss":true, "historyCacheSize":0,
                "inlineScriptNonce":"@nonce"}'>

        <title>@ViewData[Get.ViewDataKeys.Title] - @ScopeContext.Settings.ApplicationName</title>

        <link rel="canonical" href="@canonicalUrl"/>
        <link href="/images/100.jpeg" rel="icon" type="image/x-icon"/>
        <!-- Preload -->
        @*https://icons.getbootstrap.com/#usage*@
        <link rel="preload" href="~/lib/bootstrap-icons/fonts/bootstrap-icons.woff2?e34853135f9e39acf64315236852cd5a" as="font" crossorigin="anonymous">
        @*https://getbootstrap.com/docs/5.3/customize/overview/*@
        @Html.Raw(ViteManifest.GetStyleTag("buildwww/lib/bootstrap/bootstrap.scss", nonce))
        <link href="~/lib/bootstrap-icons/bootstrap-icons.min.pdY4ejLK.css" rel="stylesheet" crossorigin="anonymous"
              integrity="sha256-pdY4ejLKO67E0CM2tbPtq1DJ3VGDVVdqAR6j3ZwdiE4="/>

        @Html.Raw(ViteManifest.GetStyleTag("buildwww/app/css/app.css", nonce))
        @*defines DRN.App, DRN.Utils, DRN.Onmount*@
        @Html.Raw(ViteManifest.GetScriptTag("buildwww/app/js/app_preload.js", nonce))
        <script>
                DRN.App.environment =  @Json.Serialize(ScopeContext.Settings.Environment.ToString());
                DRN.App.isDev = @Json.Serialize(ScopeContext.Settings.IsDevEnvironment);
        </script>
        <!-- Preload -->

        <script src="~/lib/htmx/htmx.8xzDzxYQ.js" crossorigin="anonymous" integrity="sha256-8xzDzxYQnXrnW+ppKFQMaKJDvqEjRDIcRNy5fWyIVns="></script>
        <script src="~/lib/htmx/safe-nonce.rscDWfKx.js" crossorigin="anonymous" integrity="sha256-rscDWfKxSAHJUDm6aADpKS6kAo3KShDaAN0B/aW1VqM="></script>
        <script src="~/lib/jquery/jquery.min.PnUB0Vw2.js" crossorigin="anonymous" integrity="sha256-PnUB0Vw2MOeRyLIDkuud7jGp9lzj793nbO9ccQFBqyQ="></script>
        <script src="~/lib/onmount/onmount.tS6D5Yzw.js" crossorigin="anonymous" integrity="sha256-tS6D5Yzwxoy/uLQA9mVEiTu/GaafGn+we0HjTlj4zzM="></script>

        <!-- Postload -->
        @Html.Raw(ViteManifest.GetScriptTag("buildwww/app/js/app_postload.js", nonce))
        <!-- Postload -->
</head>
<body class="d-flex flex-column bg-secondary-subtle vh-100" style="overflow: hidden;" hx-ext="safe-nonce" hx-boost="true" hx-history="false">
@RenderBody()

@*https://getbootstrap.com/docs/5.3/getting-started/download/*@
@Html.Raw(ViteManifest.GetScriptTag("buildwww/lib/bootstrap/bootstrap.js", nonce, defer: true))
<script defer src="~/lib/jquery/jquery.validate.min.umbTaFxP31.js" crossorigin="anonymous" integrity="sha256-umbTaFxP31Fv6O1itpLS/3+v5fOAWDLOUzlmvOGaKV4="></script>
<script defer src="~/lib/jquery/jquery.validate.unobtrusive.min.YJa7W8Ei.js" crossorigin="anonymous" integrity="sha256-YJa7W8EiQdQpkk93iGEjjnLSUWRpRJbSfzfURh1kxz4="></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>