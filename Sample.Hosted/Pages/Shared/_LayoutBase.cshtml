        @{
                var canonicalUrl = Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
        }
        <link rel="canonical" href="@canonicalUrl"/>

        <!-- Preload -->
        <script src="~/js/site-preload.js?v=@DateTime.Now.Ticks"></script> @*defines drnApp*@
